# Stock Fantasy Simulator - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# DATABASE (Required for Production)
# ============================================
# PostgreSQL connection string (Neon, Supabase, etc.)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# ============================================
# FIREBASE (Required)
# ============================================
# Firebase Project ID
FIREBASE_PROJECT_ID=stockfantasysimulator

# Firebase Service Account JSON (Optional but recommended for production)
# Get from: Firebase Console > Project Settings > Service Accounts
# Format: {"type":"service_account","project_id":"...","private_key":"...",...}
FIREBASE_SERVICE_ACCOUNT=

# ============================================
# SECURITY (Required)
# ============================================
# Session secret - MUST be a strong random string in production
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-strong-random-secret-key-change-in-production

# ============================================
# SERVER CONFIGURATION
# ============================================
# Port to run the server on
PORT=8081

# Node environment
NODE_ENV=development

# CORS origin (optional, defaults to allow all in dev)
# In production, set to your domain: https://yourdomain.com
CORS_ORIGIN=

# ============================================
# EXTERNAL APIs (Optional)
# ============================================
# Yahoo Finance API key (optional, has fallback)
YAHOO_FINANCE_API_KEY=

# Marketstack API key (if using alternative stock API)
MARKETSTACK_API_KEY=

